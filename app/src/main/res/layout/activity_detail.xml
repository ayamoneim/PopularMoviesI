<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="com.example.ayamoneim.popularmoviesi.DetailActivity"
    android:background="@color/colorBackground"
    android:focusableInTouchMode="true">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="top"
                android:background="@drawable/text_lines"
                android:id="@+id/imageView" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:text="@string/original_title"
                    android:id="@+id/textView_"
                    android:textColor="@color/textColor" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/textColor"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:background="@drawable/text_lines"
                    android:id="@+id/textView" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:textColor="@color/textColor"
                    android:text="@string/overview"
                    android:id="@+id/textView2_" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:background="@drawable/text_lines"
                    android:textColor="@color/textColor"
                    android:id="@+id/textView2" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:textColor="@color/textColor"
                    android:text="@string/release_date"
                    android:id="@+id/textView3_" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textColor="@color/textColor"
                    android:background="@drawable/text_lines"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:id="@+id/textView3" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:textColor="@color/textColor"
                    android:text="@string/votes"
                    android:id="@+id/textView4_" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_font"
                    android:textColor="@color/textColor"
                    android:background="@drawable/text_lines"
                    android:id="@+id/textView4" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
